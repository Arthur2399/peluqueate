<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Peluqueate.LoginEmpleados">
    <ContentPage.Content>
        <Grid>

            <Image Source="fondo.png" Aspect="AspectFill"/>
            <BoxView Color="#150050" Opacity="0.7"/>
            <Image Source="peluqueate.png"
                   WidthRequest="100" 
                   HeightRequest="100" 
                   Margin="100,-270,90,290"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" 
                       Source="empleados.png" 
                       WidthRequest="100" 
                       HeightRequest="100" 
                       Margin="0,175,0,0"/>
                
                <StackLayout Grid.Row="1" Padding="40,10">
                    <Entry Placeholder="E-mail" 
                           PlaceholderColor="White" 
                           TextColor="White"/>
                    <Entry Placeholder="Contraseña" 
                           PlaceholderColor="White" 
                           IsPassword="True" 
                           TextColor="White"/>
                    <Button Text="Inciar Sesión" 
                            Background="White" 
                            BorderRadius="15"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="¿Recuperar contraseña?"
                               TextColor="white"/>
                    </StackLayout>
                </StackLayout>
                
            <Label Text="2021 © Copyright by Universidad Israel." 
                   TextColor="White" 
                   Grid.Row="2" 
                   Margin="90,0,0,15"/>

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>