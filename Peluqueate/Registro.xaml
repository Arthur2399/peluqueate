<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Peluqueate.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Frame Background="#150050" Margin="0,-10,0,-50">
                <Image Source="peluqueate.png" Margin="110,0,110,0"/>
            </Frame>
            <Grid>

                <Grid Margin="20,0,20,0">

                <Label Text="¡Registrarme!" 
                       FontAttributes="Bold" 
                       FontSize="26" 
                       TextColor="#150050" 
                       HorizontalOptions="Center"
                       Grid.Row="1" 
                       Grid.ColumnSpan="2" />

                <Entry  Placeholder="Nombre" 
                        HorizontalTextAlignment="Center" 
                        PlaceholderColor= "#150050" 
                        TextColor="#150050"  
                        Keyboard="Text"  
                        Grid.Row="2" 
                        Grid.Column="0" 
                        Margin="0,0,0,0" />

                <Entry  Placeholder="Apellido" 
                        HorizontalTextAlignment="Center" 
                        PlaceholderColor="#150050" 
                        TextColor="#150050" 
                        Keyboard="Text" 
                        Grid.Row="2" 
                        Grid.Column="1"/>

                <Label  Text="Fecha de nacimiento: " 
                        HorizontalTextAlignment="Center" 
                        TextColor="#150050" 
                        FontSize="18" 
                        Grid.Row="3" 
                        Grid.Column="0" 
                        FontAttributes="Bold"/>

                <DatePicker MinimumDate="01/01/2018"
                            MaximumDate="12/31/2018"
                            TextColor="#150050"
                            Date="06/21/2018"
                            Grid.Row="3" 
                            Grid.Column="1"/>

                <Entry  Placeholder="E-mail" 
                        PlaceholderColor="#150050"  
                        TextColor="#150050" Keyboard="Text"  
                        HorizontalTextAlignment="Center" 
                        Grid.Row="4" 
                        Grid.ColumnSpan="2" />


                <Label  Text="Provincia: " 
                        FontAttributes="Bold" 
                        HorizontalTextAlignment="Center" 
                        TextColor="#150050" 
                        FontSize="19" 
                        Grid.Row="5" 
                        Grid.Column="0"/>

                <Picker Title="Seleccione provincia" 
                        ItemsSource="{Binding CountryList}"  
                        SelectedItem="{Binding SelectedColorName, Mode=TwoWay}" 
                        TitleColor="#150050" 
                        Grid.Row="5" 
                        Grid.Column="1"/>


                <Label  Text="Ciudad: " 
                        FontAttributes="Bold" 
                        HorizontalTextAlignment="Center" 
                        TextColor="#150050" 
                        FontSize="19" 
                        Grid.Row="6" 
                        Grid.Column="0"/>

                <Picker Title="Seleccione ciudad" 
                        ItemsSource="{Binding CountryList}" 
                        SelectedItem="{Binding SelectedColorName, Mode=TwoWay}" 
                        TitleColor="#150050" 
                        Grid.Row="6" 
                        Grid.Column="1"/>

                <Label  Text="Género: " 
                        FontAttributes="Bold" 
                        HorizontalTextAlignment="Center" 
                        TextColor="#150050" 
                        FontSize="19" 
                        Grid.Row="7" 
                        Grid.Column="0"/>

                <Picker Title="Seleccione género" 
                        ItemsSource="{Binding CountryList}" 
                        SelectedItem="{Binding SelectedColorName, Mode=TwoWay}" 
                        TitleColor="#150050" 
                        Grid.Row="7" 
                        Grid.Column="1"/>

                <Entry  Placeholder="Contraseña" 
                        IsPassword="True" 
                        PlaceholderColor="#150050" 
                        TextColor="#150050" 
                        Keyboard="Text" 
                        HorizontalTextAlignment="Center"  
                        Grid.Row="8" 
                        Grid.ColumnSpan="2"/>

                <Entry  Placeholder="Repetir contraseña" 
                        IsPassword="True" 
                        PlaceholderColor="#150050" 
                        TextColor="#150050" 
                        HorizontalTextAlignment="Center" 
                        Keyboard="Text"  
                        Grid.Row="9" 
                        Grid.ColumnSpan="2" />

                <Button Text="Siguiente" 
                        Background="#150050" 
                        x:Name="btn_siguiente"
                        Clicked="btn_siguiente_Clicked"
                        BorderRadius="15" 
                        TextColor="White"
                        Grid.Row="10" 
                        Grid.Column="1" 
                        Margin="10,10,10,-5"/>
                 
                
                <Label Text="." Grid.Row="10"/>
                <Label Text="." Grid.Row="11"/>

                </Grid>
        </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>