<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Peluqueate.verCostos">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame BackgroundColor="LightGray">
                <Label Text="Ver costos" FontSize="Title"/>
            </Frame>
            <Label x:Name="lblColaborador" TextColor="Black"/>
            <Grid>
                <Label Text="Detalle" Grid.Row="0" Grid.Column="0" TextColor="Black"/>
                <Label Text="Costo" Grid.Row="0" Grid.Column="1" TextColor="Black"/>
                <Label Text="Tiempo" Grid.Row="0" Grid.Column="2" TextColor="Black"/>

            </Grid>
            <Grid>
                <Label Text="Detalle" Grid.Row="0" Grid.Column="0" TextColor="Black"/>
                <Label Text="Costo" Grid.Row="0" Grid.Column="1" TextColor="Black"/>
            </Grid>
            <Button x:Name="btnListo" Text="Listo" Clicked="btnListo_Clicked" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>